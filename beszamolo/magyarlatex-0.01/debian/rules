#!/usr/bin/make -f
#
# by pts@fazekas.hu at Mon Mar  8 15:42:25 CET 2004
#
# Made with the aid of debmake, by Christoph Lameter,
# based on the sample debian/rules file for GNU hello by Ian Jackson.

package=magyarlatex
MAKEF=$(MAKE) -f Makefile.magyarlatex 
SHELL:=/bin/bash

build:
	$(checkdir)
	test -f no_docs_src || $(MAKEF) compile-docs
	touch build

clean:
	$(checkdir)
	-rm -f build
	-$(MAKEF) clean
	# -rm -f `find . -name "*~"`
	-rm -rf debian/tmp debian/magyarlatex-doc debian/files* core debian/substvars
	-rm -f core DEADJOE a.out
	-rm -f config.status config.cache config.h
	-rm -rf autom4te.cache

binary-indep: checkroot build
	$(checkdir)
# There are no architecture-independent files to be uploaded
# generated by this package.  If there were any they would be
# made here.

binary-arch: checkroot build
	$(checkdir)
	-rm -rf debian/tmp debian/magyarlatex-doc
	install -d debian/tmp debian/magyarlatex-doc
	# cd debian/tmp && install -d `cat ../dirs`
	mkdir -p debian/tmp/usr/share/texmf/tex/latex/base
	echo >debian/tmp/usr/share/texmf/tex/latex/base/latex.ltx
	$(MAKEF) install-files prefix=`pwd`/debian/tmp/usr #DESTDIR=`pwd`/debian/tmp
	rm -f debian/tmp/usr/share/texmf/tex/latex/base/latex.ltx
# Must have debmake installed for this to work. Otherwise please copy
# /usr/bin/debstd into the debian directory and change debstd to debian/debstd
# vvv Dat: without `-c' it creates *.pdf.gz
	debstd -m
#	bash
	mv -f debian/tmp/usr/share/doc/$(package)/README{.magyarlatex,}
	gzip -9 debian/tmp/usr/share/doc/$(package)/README
	dpkg-gencontrol -isp -p$(package)
	chown -R root.root debian/tmp
	chmod -R go=rX debian/tmp
	dpkg --build debian/tmp ..

define checkdir
	test -f debian/rules
endef

binary:
	$(checkdir)
	if test root = "`whoami`"; then $(MAKE) -f debian/rules binary-indep binary-arch; \
	else                   fakeroot $(MAKE) -f debian/rules binary-indep binary-arch; fi

checkroot:
	$(checkdir)
	test root = "`whoami`"

.PHONY: binary binary-arch binary-indep clean checkroot

.PHONY: source source-here
source-here:
	rm -rf debsrc
	mkdir -p debsrc/debian
	cp -a $(wildcard $(addprefix debian/,README.debian docs changelog control copyright dirs rules prerm postrm postinst preinst)) debsrc/debian
	$(MAKEF) install-debsrc
	DIR="`<debian/changelog perl -ne 'print if s@^(\S+) [(]([^)]+?)(?:-\d+)?[)].*@$$1-$$2@;last'`" && \
	  test ! -d "$$DIR" && \
	  mv debsrc "$$DIR" && \
	  (dpkg-source -b "$$DIR";true) && \
	  rm -rf "$$DIR"

source: source-here
	mv $(package)_*-*.tar.gz $(package)_*-*.dsc ..
